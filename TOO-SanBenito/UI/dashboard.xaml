<Page x:Class="TOO_SanBenito.UI.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TOO_SanBenito.UI"
      mc:Ignorable="d" 
      d:DesignHeight="776.2" d:DesignWidth="1175"
      Title="Dashboard">

    <Page.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="#F2F2F2"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#1445A6"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#14488C"/>
        <SolidColorBrush x:Key="ThirdBrush" Color="#05C7F2"/>
        <SolidColorBrush x:Key="FourthBrush" Color="#94BF36"/>

        <!--Colores para las aletas-->
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>

        <!-- Estilo para tarjetas -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,15,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0" Margin="0">
        <StackPanel Margin="0">
            <!-- Mensaje de bienvenida PRIMERO -->
       <Border Style="{StaticResource CardStyle}" Margin="0,0,15,15">
       <StackPanel>
   <TextBlock Text="&#161;Bienvenido al Sistema San Benito!" 
  FontSize="20" 
    FontWeight="Bold"
         Margin="0,0,0,10"/>
    <TextBlock Text="Este es tu panel de control principal. Desde aqui puedes acceder a todas las funcionalidades del sistema."
           TextWrapping="Wrap"
          Foreground="Gray"
             FontSize="14"/>
                </StackPanel>
         </Border>

            <!-- Tarjetas de estadisticas -->
 <Grid Margin="0,0,0,20">
   <Grid.ColumnDefinitions>
         <ColumnDefinition Width="*"/>
     <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
    <ColumnDefinition Width="*"/>
</Grid.ColumnDefinitions>

   <!-- Tarjeta 1: Total Usuarios -->
 <Border Grid.Column="0" Style="{StaticResource CardStyle}">
     <StackPanel>
     <TextBlock Text="&#128101;" FontSize="32" Margin="0,0,0,10"/>
           <TextBlock Text="Total Usuarios" 
       FontSize="14" 
        Foreground="Gray"/>
               <TextBlock Text="1,234" 
    FontSize="28" 
      FontWeight="Bold" 
            Margin="0,5,0,0"/>
     <TextBlock Text="&#8593; 12% vs mes anterior" 
   FontSize="11" 
     Foreground="{StaticResource SuccessBrush}" 
 Margin="0,5,0,0"/>
       </StackPanel>
           </Border>

              <!-- Tarjeta 2: Ventas -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
           <StackPanel>
             <TextBlock Text="&#128176;" FontSize="32" Margin="0,0,0,10"/>
      <TextBlock Text="Ventas del Mes" 
      FontSize="14" 
     Foreground="Gray"/>
     <TextBlock Text="$45,678" 
      FontSize="28" 
      FontWeight="Bold" 
           Margin="0,5,0,0"/>
      <TextBlock Text="&#8593; 8% vs mes anterior" 
 FontSize="11" 
      Foreground="{StaticResource SuccessBrush}" 
  Margin="0,5,0,0"/>
      </StackPanel>
  </Border>

       <!-- Tarjeta 3: Pedidos -->
           <Border Grid.Column="2" Style="{StaticResource CardStyle}">
            <StackPanel>
        <TextBlock Text="&#128230;" FontSize="32" Margin="0,0,0,10"/>
     <TextBlock Text="Pedidos Activos" 
          FontSize="14" 
    Foreground="Gray"/>
         <TextBlock Text="89" 
         FontSize="28" 
    FontWeight="Bold" 
   Margin="0,5,0,0"/>
 <TextBlock Text="15 pendientes" 
        FontSize="11" 
          Foreground="{StaticResource WarningBrush}" 
    Margin="0,5,0,0"/>
        </StackPanel>
             </Border>

 <!-- Tarjeta 4: Alertas -->
       <Border Grid.Column="3" Style="{StaticResource CardStyle}">
   <StackPanel>
    <TextBlock Text="&#9888;" FontSize="32" Margin="0,0,0,10"/>
           <TextBlock Text="Alertas" 
         FontSize="14" 
 Foreground="Gray"/>
<TextBlock Text="3" 
    FontSize="28" 
 FontWeight="Bold" 
      Margin="0,5,0,0"/>
   <TextBlock Text="Requieren atencion" 
      FontSize="11" 
    Foreground="{StaticResource DangerBrush}" 
      Margin="0,5,0,0"/>
            </StackPanel>
    </Border>
</Grid>

    <!-- Seccion de graficos/contenido adicional -->
     <Grid>
        <Grid.ColumnDefinitions>
               <ColumnDefinition Width="2*"/>
         <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

              <!-- Grafico principal -->
     <Border Grid.Column="0" Style="{StaticResource CardStyle}">
            <StackPanel>
     <TextBlock Text="Ventas Mensuales" 
      FontSize="18" 
      FontWeight="SemiBold" 
    Margin="0,0,0,20"/>
     <Rectangle Height="200" 
       Fill="#F1F5F9" 
      RadiusX="4" 
RadiusY="4"/>
      <TextBlock Text="&#128202; Grafico en construccion" 
             HorizontalAlignment="Center" 
         VerticalAlignment="Center" 
   Margin="0,-120,0,0" 
         Foreground="Gray"/>
        </StackPanel>
       </Border>

            <!-- Actividad reciente -->
    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
      <StackPanel>
         <TextBlock Text="Actividad Reciente" 
          FontSize="16" 
               FontWeight="SemiBold" 
    Margin="0,0,0,15"/>

 <StackPanel Margin="0,0,0,10">
     <TextBlock Text="&#8226; Nuevo usuario registrado" 
        FontSize="12"/>
             <TextBlock Text="  Hace 5 minutos" 
       FontSize="10" 
   Foreground="Gray"/>
          </StackPanel>

         <StackPanel Margin="0,0,0,10">
           <TextBlock Text="&#8226; Pedido #1234 completado" 
           FontSize="12"/>
<TextBlock Text="  Hace 15 minutos" 
        FontSize="10" 
     Foreground="Gray"/>
       </StackPanel>

   <StackPanel Margin="0,0,0,10">
  <TextBlock Text="&#8226; Inventario actualizado" 
 FontSize="12"/>
  <TextBlock Text="  Hace 1 hora" 
  FontSize="10" 
            Foreground="Gray"/>
        </StackPanel>

 <StackPanel>
  <TextBlock Text="&#8226; Sistema backup exitoso" 
            FontSize="12"/>
      <TextBlock Text="  Hace 2 horas" 
      FontSize="10" 
       Foreground="Gray"/>
    </StackPanel>
     </StackPanel>
  </Border>
 </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
