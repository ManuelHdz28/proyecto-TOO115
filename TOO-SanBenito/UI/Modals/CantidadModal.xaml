<Window x:Class="TOO_SanBenito.UI.Modals.CantidadModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleccionar Cantidad"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="White">

    <Border Padding="20" CornerRadius="8">
        <StackPanel>
            <TextBlock x:Name="TxtTitulo" 
                       Text="Cantidad para Producto X" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Margin="0,0,0,10"/>

            <TextBlock x:Name="TxtStockMaximo" 
                       Text="Stock disponible: 0" 
                       FontSize="12" 
                       Foreground="#64748B" 
                       Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="Cantidad:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <TextBox x:Name="TxtCantidad" 
                         Width="80" 
                         Padding="5" 
                         Text="1" 
                         TextChanged="TxtCantidad_TextChanged"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar" 
                        Click="BtnCancelar_Click" 
                        Margin="0,0,10,0"
                        Padding="15,8"
                        Background="#94A3B8"
                        Foreground="White"/>
                <Button Content="Aceptar" 
                        x:Name="BtnAceptar"
                        Click="BtnAceptar_Click"
                        Padding="15,8"
                        Background="#2563EB"
                        Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>