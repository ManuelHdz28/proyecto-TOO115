<Window x:Class="TOO_SanBenito.UI.Modals.NotificacionesModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alertas y Notificaciones"
        Width="450"
        Height="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="White">

    <Window.Resources>
        <SolidColorBrush x:Key="SidebarBrush" Color="#1E293B"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" Background="{StaticResource SidebarBrush}" Padding="20">
            <TextBlock x:Name="TxtTotalNotificaciones"
                       Text="0 Notificaciones Pendientes"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Border>

        <!-- Lista de Notificaciones -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
            <StackPanel x:Name="PanelNotificaciones">
                <!-- Los ítems se llenan aquí -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>