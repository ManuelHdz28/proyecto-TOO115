<Window x:Class="TOO_SanBenito.UI.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TOO_SanBenito.UI"
        mc:Ignorable="d"
        Title="Login - San Benito" 
 Height="500" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <!-- Recursos de la ventana -->
    <Window.Resources>
        <!-- Colores base -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="PrimaryBrushDark" Color="#1E40AF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#DC2626"/>

        <!-- Estilo de TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,4,0,12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Estilo de PasswordBox -->
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="0,4,0,12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Estilo de Button primario -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrushDark}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
           BorderBrush="{TemplateBinding BorderBrush}"
     BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrushDark}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo de Label -->
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,8,0,2"/>
        </Style>
    </Window.Resources>

    <!-- Atajos de teclado -->
    <Window.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand}"/>
    </Window.InputBindings>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="36.04"/>
            <RowDefinition Height="49.163"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24" Grid.RowSpan="2">
            <TextBlock Text="Bienvenido" 
         FontSize="28" 
      FontWeight="Bold"
         HorizontalAlignment="Center"/>
            <TextBlock Text="Ingresa tus credenciales para continuar"
   Foreground="Gray" 
       Margin="0,8,0,0"
    HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Formulario -->
        <StackPanel Grid.Row="2" VerticalAlignment="Center">
            <Label Content="Usuario o email"/>
            <TextBox x:Name="UsernameBox"
            AutomationProperties.Name="Usuario o email"
         ToolTip="Ingresa tu usuario o email"/>

            <Label Content="Contraseña"/>
            <PasswordBox x:Name="PasswordBox"
     AutomationProperties.Name="Contraseña"
      ToolTip="Ingresa tu contraseña"/>

            <DockPanel Margin="0,8,0,0" LastChildFill="False">
                <CheckBox Content="Recordarme"
   DockPanel.Dock="Left"
VerticalAlignment="Center"/>
                <TextBlock Text="¿Olvidaste tu contraseña?"
  Foreground="{StaticResource PrimaryBrush}"
      Cursor="Hand"
  DockPanel.Dock="Right"
    VerticalAlignment="Center"
           TextDecorations="Underline"/>
            </DockPanel>

            <Button x:Name="LoginButton"
           Style="{StaticResource PrimaryButton}"
   Content="Iniciar sesión"
           Click="LoginButton_Click"
     Margin="0,20,0,0"
  Height="44"/>

            <!-- Mensaje de error -->
            <TextBlock x:Name="ErrorMessage"
       Foreground="{StaticResource ErrorBrush}"
     Margin="0,12,0,0"
  TextWrapping="Wrap"
         HorizontalAlignment="Center"
       Visibility="Collapsed"/>
            <TextBlock TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Capa de cargando -->
        <Border x:Name="LoadingOverlay"
      Grid.RowSpan="3"
             Background="#80FFFFFF"
                Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="6"/>
                <TextBlock Text="Validando credenciales..." 
               Margin="0,16,0,0"
       FontSize="14"
  Foreground="#666"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
