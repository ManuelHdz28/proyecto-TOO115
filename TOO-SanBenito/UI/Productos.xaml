<Page x:Class="TOO_SanBenito.UI.Productos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Productos">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#1E293B"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Panel principal de productos -->
        <Grid x:Name="PanelPrincipal">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barra de acciones -->
            <Border Grid.Row="0" Background="White" Padding="20,15" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="BtnAgregar" Content="+ Nuevo Producto"
                                Background="{StaticResource PrimaryBrush}"
                                Foreground="White"
                                Style="{StaticResource ActionButtonStyle}"
                                Click="BtnAgregar_Click"/>
                        <Button x:Name="BtnRefrescar" Content="âŸ³ Refrescar"
                                Background="#64748B"
                                Foreground="White"
                                Style="{StaticResource ActionButtonStyle}"
                                Click="BtnRefrescar_Click"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Filtrar por:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#64748B"/>
                        <ComboBox x:Name="CmbFiltroCategoria" Width="180" SelectionChanged="CmbFiltroCategoria_SelectionChanged"/>
                        <TextBox x:Name="TxtBuscar" Width="250" Padding="8" Margin="10,0,0,0"
                                 TextChanged="TxtBuscar_TextChanged"
                                 Text="" />
                        <TextBlock Text="ðŸ”" VerticalAlignment="Center" Margin="-30,0,10,0" Foreground="#94A3B8" IsHitTestVisible="False"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- EstadÃ­sticas rÃ¡pidas -->
            <Border Grid.Row="1" Background="#F8FAFC" Padding="20,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Background="White" CornerRadius="6" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total Productos: " Foreground="#64748B" FontSize="13"/>
                            <TextBlock x:Name="TxtTotalProductos" Text="0" FontWeight="Bold" FontSize="13"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White" CornerRadius="6" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Stock Bajo: " Foreground="{StaticResource WarningBrush}" FontSize="13"/>
                            <TextBlock x:Name="TxtStockBajo" Text="0" FontWeight="Bold" FontSize="13"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White" CornerRadius="6" Padding="15,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Valor Inventario: " Foreground="#64748B" FontSize="13"/>
                            <TextBlock x:Name="TxtValorInventario" Text="$0.00" FontWeight="Bold" FontSize="13"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- DataGrid de productos -->
            <DataGrid x:Name="DgProductos" Grid.Row="2"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="None"
                      HeadersVisibility="Column"
                      Background="White"
                      RowHeight="45"
                      Margin="20">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" d:IsHidden="True"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*" MinWidth="180" d:IsHidden="True"/>
                    <DataGridTextColumn Header="CategorÃ­a" Binding="{Binding CategoriaNombre}" Width="150" d:IsHidden="True"/>
                    <DataGridTextColumn Header="Caducidad" Binding="{Binding FechaCaducidad, StringFormat=\{0:dd/MM/yyyy\}}" Width="100"/>
                    <DataGridTextColumn Header="Precio" Binding="{Binding Precio, StringFormat=C2}" Width="100" d:IsHidden="True"/>
                    <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="80" d:IsHidden="True"/>

                    <DataGridTemplateColumn Header="Estado" Width="120" d:IsHidden="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding StockBajo}" Value="True">
                                                    <Setter Property="Background" Value="#FEF3C7"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding StockBajo}" Value="False">
                                                    <Setter Property="Background" Value="#D1FAE5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock FontSize="11" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding StockBajo}" Value="True">
                                                        <Setter Property="Text" Value="Stock Bajo"/>
                                                        <Setter Property="Foreground" Value="#92400E"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding StockBajo}" Value="False">
                                                        <Setter Property="Text" Value="Disponible"/>
                                                        <Setter Property="Foreground" Value="#065F46"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Caducidad" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#D1FAE5"/>
                                            <!-- Por defecto: Verde claro -->
                                            <Style.Triggers>
                                                <!-- Vencido (Rojo) -->
                                                <DataTrigger Binding="{Binding EstadoCaducidad}" Value="Vencido">
                                                    <Setter Property="Background" Value="#FEE2E2"/>
                                                    <!-- Rojo claro -->
                                                </DataTrigger>
                                                <!-- Por Vencer (Naranja/Warning) -->
                                                <DataTrigger Binding="{Binding EstadoCaducidad}" Value="PorVencer">
                                                    <Setter Property="Background" Value="#FEF3C7"/>
                                                    <!-- Naranja claro -->
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock FontSize="11" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Perfecto"/>
                                                <Setter Property="Foreground" Value="#065F46"/>
                                                <!-- Texto Verde oscuro -->
                                                <Style.Triggers>
                                                    <!-- Vencido (Rojo) -->
                                                    <DataTrigger Binding="{Binding EstadoCaducidad}" Value="Vencido">
                                                        <Setter Property="Text" Value="Vencido"/>
                                                        <Setter Property="Foreground" Value="#991B1B"/>
                                                        <!-- Texto Rojo oscuro -->
                                                    </DataTrigger>
                                                    <!-- Por Vencer (Naranja/Warning) -->
                                                    <DataTrigger Binding="{Binding EstadoCaducidad}" Value="PorVencer">
                                                        <Setter Property="Text" Value="Por Vencer"/>
                                                        <Setter Property="Foreground" Value="#92400E"/>
                                                        <!-- Texto Naranja oscuro -->
                                                    </DataTrigger>
                                                    <!-- Sin Fecha -->
                                                    <DataTrigger Binding="{Binding EstadoCaducidad}" Value="Sin Fecha">
                                                        <Setter Property="Text" Value="-"/>
                                                        <Setter Property="Foreground" Value="#64748B"/>
                                                        <Setter Property="Background" Value="Transparent"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Acciones" Width="180" d:IsHidden="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="âœ Editar"
                                            Background="#3B82F6"
                                            Foreground="White"
                                            Padding="8,4"
                                            Margin="2"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="BtnEditar_Click"
                                            Tag="{Binding Id}"/>
                                    <Button Content="ðŸ—‘ Eliminar"
                                            Background="#EF4444"
                                            Foreground="White"
                                            Padding="8,4"
                                            Margin="2"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="BtnEliminar_Click"
                                            Tag="{Binding Id}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8FAFC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Grid>

        <!-- Panel de formulario (overlay) -->
        <Grid x:Name="PanelFormulario" Visibility="Collapsed" Background="#AA000000">
            <Border Background="White"
                    Width="500"
                    MaxHeight="600"
                    CornerRadius="8"
                    VerticalAlignment="Center"
                    Padding="30">
                <StackPanel>
                    <TextBlock x:Name="TxtTituloFormulario"
                               Text="Nuevo Producto"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Nombre del Producto" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <TextBox x:Name="TxtNombre" Padding="10" Margin="0,0,0,15"/>

                    <TextBlock Text="DescripciÃ³n" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <TextBox x:Name="TxtDescripcion"
                             Padding="10"
                             Height="60"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Fecha de Caducidad" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <DatePicker x:Name="DpFechaCaducidad" 
                Padding="10" 
                Margin="0,0,0,15"
                SelectedDateFormat="Short"/>

                    <TextBlock Text="CategorÃ­a" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <ComboBox x:Name="CmbCategoria"
                              DisplayMemberPath="Nombre"
                              SelectedValuePath="Id"
                              Margin="0,0,0,15"
                              Height="35"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Precio" Margin="0,0,0,5" FontWeight="SemiBold"/>
                            <TextBox x:Name="TxtPrecio" Padding="10"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Stock" Margin="0,0,0,5" FontWeight="SemiBold"/>
                            <TextBox x:Name="TxtStock" Padding="10"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0,25,0,0">
                        <!-- Le asignamos un x:Name para poder manipularlo en C# -->
                        <Button x:Name="BtnCancelar" 
            Content="Cancelar"
            Background="#94A3B8"
            Foreground="White"
            Padding="20,10"
            Margin="0,0,10,0"
            BorderThickness="0"
            Cursor="Hand"
            Click="BtnCancelar_Click"/>
                        <Button x:Name="BtnGuardar"
            Content="Guardar"
            Background="{StaticResource PrimaryBrush}"
            Foreground="White"
            Padding="20,10"
            BorderThickness="0"
            Cursor="Hand"
            Click="BtnGuardar_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
